{
  "name": "chat-with-people-backend",
  "version": "1.0.0",
  "description": "Backend codes for the project ChatWithPeople",
  "main": "server.js",
  "dependencies": {
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "express-jwt": "^5.3.1",
    "graphql": "^0.13.2",
    "jsrsasign": "^8.0.12",
    "mysql2": "^1.5.3",
    "nodemailer": "^4.6.4",
    "password-hash": "^1.2.2",
    "sequelize": "^4.37.7",
    "sequelize-cli": "^4.0.0",
    "smart-input-validator": "^1.1.10",
    "socket.io": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-watch": "^3.1.4",
    "jest": "^22.4.3",
    "nodemon": "^1.17.4"
  },
  "scripts": {
    "reinstallNodeModules": "rm -rf node_modules && npm install",
    "test": "jest",
    "config:nodemailer": "cp configs/nodemailer.example.js src/config/nodemailer.js",
    "config:sequelize": "sequelize init",
    "config:init": "npm run config:nodemailer && npm run config:sequelize",
    "eslint": "node node_modules/eslint/bin/eslint.js --parser babel-eslint 'src/**/**/*.js'",
    "eslint-watch": "node node_modules/eslint-watch/bin/esw --parser babel-eslint 'src/**/**/*.js' --watch",
    "build": "rm -rf build && babel src -d build && cp src/config/sequelize.json build/config/sequelize.json && cp src/config/nodemailer.js build/config/nodemailer.js",
    "start:production": "rm -rf build/ && npm run build && node build/server.js",
    "start": "nodemon --exec babel-node ./src/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aprilmintacpineda/chat-with-people-backend.git"
  },
  "keywords": [
    "chat",
    "nodejs",
    "express",
    "sequelize",
    "socket.io",
    "realtime"
  ],
  "author": "April Mintac Pineda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aprilmintacpineda/chat-with-people-backend/issues"
  },
  "homepage": "https://github.com/aprilmintacpineda/chat-with-people-backend#readme"
}
